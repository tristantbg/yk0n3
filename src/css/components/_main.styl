webfont('CG','CG')
webfont('CGB','CGB')

body,html
	width 100%
	-webkit-text-size-adjust 100%
	background $primary

html
	font-size 1.68vh

body
	font-family 'CG', Helvetica Neue, Arial, sans-serif
	font-size 1rem
	text-rendering optimizeLegibility
	font-smoothing()
	
letterspacing()
	letter-spacing 0.01em
	
bold()
	font-family 'CGB', Helvetica Neue, Arial, sans-serif

.bold, strong
	bold()
	
title()
	margin-bottom 1em
	display inline-block
	border-bottom 1px solid
	padding-bottom .2em
	text-transform uppercase
	bold()

.responsive-image
	hideselect()
	position relative
	overflow hidden
	img
		position absolute
		top 0
		left 0

p
	margin-bottom 1em
	line-height 1.3
	letterspacing()
	&:last-child
		margin-bottom 0

::selection
	background $secondary
	
::-moz-selection
	background $secondary

*
	hideselect()
	box-sizing border-box

video::-webkit-media-controls
	display none

video::-webkit-media-controls-play-button {}

video::-webkit-media-controls-volume-slider {}

video::-webkit-media-controls-mute-button {}

video::-webkit-media-controls-timeline {}

video::-webkit-media-controls-current-time-display {}

a, a:hover, a:visited, a:focus
	color inherit
	text-decoration none
	cursor pointer

.lazy, .plyr
	transition opacity 250ms ease
	opacity 0

.lazy.lazyloaded, .lazy.flickity-lazyloaded, .plyr.plyr--ready
	opacity 1

#main
	span(1)

#container
	span(1)

#page-content
	padding-right 8rem

body.is-loading
	#page-content
		opacity 0
		transition opacity 100ms ease