#page-description
	position relative
	z-index 15
	line-height 1.3
	letterspacing()
	a
		bold()
		line-height 2
		box-shadow 0 0.1rem $primary, 0 0.16rem
		// text-decoration underline
		// text-decoration-skip ink
	u
		line-height 2
		box-shadow 0 0.1rem $primary, 0 0.16rem
		// text-decoration underline
		// text-decoration-skip ink
	ul, ol
		padding-left 1.2em
		li
			list-style disc

[page-type=default],
[page-type=manifesto],
[page-type=project],
[page-type=page-slider],
[page-type=entries]
[page-type=entry],
[page-type=events],
[page-type=offices]
	h1, h2, h3, .lead
		title()
	h3, .lead
		border-bottom none
	.slider
		span(6/10)
		+below($md)
			stack()
		.slide
			background alpha($secondary, 0.05)
	#page-description
		span(4/10)
		padding ($padding*4) ($padding+1.5) ($padding+1.5)
		overflow-y scroll
		background $primary
		+above($xl)
			padding-top ($padding*4+4)
		+above($md + 1)
			height 100vh
		+below($md)
			stack()
			padding $padding
		&::-webkit-scrollbar
			display none
		&.fixed
			+above($md + 1)
				position absolute
				top 0
				right 0
				z-index 11

