#manifesto
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  video
    width 100%
    height 100%
    object-fit cover
    &.contain
      object-fit contain
  .plyr, .plyr__video-wrapper
    height 100%
    overflow hidden
  .plyr:not(:first-child)
    display none

[page-type=manifesto]
  #page-description
    transform translateX(100%)
