#map
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	background-size cover
	background-position center

#offices-text
	// color lighten($secondary, 50)
	transition color $colorTransition ease
	text-transform uppercase
	line-height 0.9
	position absolute
	bottom ($padding+1.5)
	left ($padding+1.5)
	z-index 10
	#title-1
		font-size 2rem
	#title-2
		font-size 4rem
		position relative
		left -0.05em
	#title-3, #title-4
		font-size 2rem
		line-height 1.1

#offices
	margin-top 0.5em
	line-height 1.5
	[event-target]
		cursor pointer

[page-type=offices]
	#page-description
		transform translateX(100%)

[logo-color=light]
	#intro-text
		color $primary
