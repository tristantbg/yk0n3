#projects
	span(8/12, $offset: 2/12)
	display flex
	flex-wrap wrap
	justify-content space-between
	margin-bottom 50vh
	&::after
		display none
	+below($md)
		width 100%
		margin 0
		padding 0 $padding
	.project-item
		background alpha($secondary, 0.1)
		width 'calc((100% - %s) / 3)' % ($padding*2)
		display block
		margin-top $padding
		position relative
		color $primary
		letterspacing()
		&:nth-child(-n+3)
			margin-top 0
		+below($md)
			width 'calc((100% - %s) / 3)' % ($padding)
	.project-item--infos
			position absolute
			top 0
			left 0
			width 100%
			height 100%
			background alpha($secondary, 0.5)
			opacity 0
			transition opacity 300ms ease
			z-index 2
			+above($md + 1)
				&:hover
					opacity 1
	.project-item--title
		title()
		margin-bottom .2em
	.project-item--header
		position absolute
		top 0
		left 0
		width 100%
		padding $padding
	.project-item--footer
		position absolute
		bottom 0
		left 0
		width 100%
		padding $padding
