.fullpage-wrapper
	transform none !important
	.fp-section
		position fixed
		top 0
		left 0
		z-index 0
		background $primary
		&.active
			z-index 2
			&.animate
				transition transform 500ms ease
				transform none
		&:not(.leaving):not(.animate)
			transform translateY(100%) translateZ(0)
	&.going-up
		.fp-section
			&:not(.leaving):not(.animate)
				transform translateY(-100%) translateZ(0)

section.section
	span(1)
	min-height 100vh
	overflow hidden
	// position relative
	&.fp-section
		#page-description
			+above($md + 1)
				padding-right 11rem
		#page-description.fixed
			+above($md + 1)
				right ($padding+1.5)

